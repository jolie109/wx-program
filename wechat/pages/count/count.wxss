/* pages/count/count.wxss */

.all {
  height: 100%;
}
.container {
  padding: 40rpx 0;
}
.section {
  padding-top: 50rpx;
  width: 94%;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  justify-content: center
}
.section view{
  flex:1;
   display: inline-block;

}
.title {
  width: 40%;
}
.addPrint {
  margin-top: 40rpx;
  width: 60%;
  border-radius: 20rpx;
  border: 1px solid #1aad19;
  color: #1aad19;
}
.status_td {
  display: flex;
  margin: auto 0;
}
.status {
  width: 30rpx;
  height: 30rpx;
  border: 1px solid #979797;
  border-radius: 50%;
}
.statusR {
  background: red;
}
.statusG {
  background: green;
}
.statusH {
  background: gray;
}
.title-con{
  box-sizing: border-box;
  padding:0 20rpx;

}
.table {
  width: 94%;
  border: 0px solid darkgray;
  font-size: 12px;
  padding: 20rpx 0;
  margin: auto;
  text-align: center;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.5rem;
  align-items: center;
}
.td {
  width: 30%;
  display: flex;
  margin: auto;
  justify-content: center;
  text-align: center;
  align-items: center;
}
.th {
  width: 30%;
  display: flex;
  justify-content: center;
  color: #fff;
  height: 2rem;
  align-items: center;
  /* text-align: center */
}
.icon {
  display: flex;
  font-size: 12rpx;
  align-items: center;
  margin: auto;
}
#status-td{
  width:20%;
}
#name-th{
  width:20%;
}
#sth{
  width:20%;
}
.bg-w {
  background: snow;
  background: #487ee2;
  border-radius: 5px;
  text-align: center;
}
.noShow{
  display: none;
}
.isShow{
  display: block;
}
.hidtr{
  z-index:200;
  box-shadow: 6px 6px 6px #ccc;
}
  .bg-hid{
    background: #ccc;
   border-radius: 5px;
   text-align: center
  }
